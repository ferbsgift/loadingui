-- Enhanced Loading GUI
local player = game:GetService("Players").LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "LoadingScreen"
gui.ResetOnSpawn = false

-- Create loading elements
local frame = Instance.new("Frame")
frame.Size = UDim2.new(1, 0, 1, 0)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
frame.Parent = gui

local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(0.8, 0, 0.1, 0)
loadingText.Position = UDim2.new(0.1, 0, 0.4, 0)
loadingText.Text = "Loading your script..."
loadingText.TextColor3 = Color3.new(1, 1, 1)
loadingText.TextScaled = true
loadingText.BackgroundTransparency = 1
loadingText.Parent = frame

local barBackground = Instance.new("Frame")
barBackground.Size = UDim2.new(0.8, 0, 0.05, 0)
barBackground.Position = UDim2.new(0.1, 0, 0.5, 0)
barBackground.BackgroundColor3 = Color3.new(0.3, 0.3, 0.3)
barBackground.Parent = frame

local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, 0, 1, 0)
bar.BackgroundColor3 = Color3.new(0.2, 0.6, 1)
bar.Parent = barBackground

-- Show the GUI
gui.Parent = player:WaitForChild("PlayerGui")

-- Animate loading
for i = 1, 100 do
    bar.Size = UDim2.new(i/100, 0, 1, 0)
    loadingText.Text = "Loading... "..i.."%"
    task.wait(0.03)
end

-- Remove loading screen after animation
task.wait(0.5)
gui:Destroy()

